{% macro project_card(title, image, description, live_link, code_link) -%}
  <!--suppress ALL -->
<div class="col s12 m6 l6 xl6">
    <div class="card project-card">
      <div class="card-image">
        {% if image %}
        <img alt="{{ title }}" src="{{ '/res/images' + image }}"/>
        {% else %}
        <img alt="{{ title }}" src="/res/images/project_thumbs/no_image.png" />
        {%  endif %}
      </div>
      <div class="card-content">
        <span class="card-title">{{ title }}</span>
        {{ description }}
      </div>
      <div class="card-action">
        {%  if code_link %}
        <a href={{ code_link }}>Code</a>
        {% endif %}
        {% if live_link %}
        <a href={{ live_link }}>Live Demo</a>
        {% endif %}
      </div>
    </div>
  </div>
{%- endmacro %}
